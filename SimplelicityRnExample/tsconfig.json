// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@locales/*": ["src/locales/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["src/assets/*"],
      "@style/*": ["src/style/*"],
      "@enums/*": ["src/enums/*"],
      "@api/*": ["src/api/*"]
    },
    "types": ["styled-components-react-native"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
